rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageFile() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB limit
             request.resource.contentType.matches('image/.*');
    }
    
    function isValidAudioFile() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB limit
             request.resource.contentType.matches('audio/.*');
    }
    
    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && isValidImageFile();
      allow delete: if isOwner(userId);
    }
    
    // User uploaded content (prayer recordings, notes, etc.)
    match /users/{userId}/uploads/{allPaths=**} {
      allow read, write, delete: if isOwner(userId) && 
                                    (isValidImageFile() || isValidAudioFile());
    }
    
    // Prayer images - read-only for authenticated users
    match /prayers/{prayerId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin SDK can upload
    }
    
    // Category icons - read-only for authenticated users
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin SDK can upload
    }
    
    // Verse of the day images
    match /verses/{date}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin SDK can upload
    }
    
    // Public assets - readable by all authenticated users
    match /public/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin SDK can upload
    }
    
    // App assets (icons, backgrounds, etc.)
    match /assets/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if false; // Only admin SDK can upload
    }
    
    // Temporary uploads (for processing)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) && 
                           request.time < resource.timeCreated + duration.value(1, 'h'); // 1 hour TTL
      allow delete: if isOwner(userId);
    }
    
    // Admin uploads
    match /admin/{allPaths=**} {
      allow read, write: if false; // Only admin SDK
    }
    
    // Default deny rule for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}